package oops;

class Circle{
	double radius;
	
	Circle(double r){
		radius=r;
	}
	
	double areaOfCircle(){
		return Math.PI*radius*radius;
	}
	double circumference() {
		return 2*Math.PI*radius;
	}
	
}
public class OopsExampleprgm{
	public static void main(String[] args) {
		 Circle obj=new  Circle(5.0);
		 System.out.println("Radius: "+obj.radius);
		 System.out.println("Area of Circle: "+obj.areaOfCircle());
		 System.out.println("Circumference: "+obj.circumference());
		 
		
		 }
}
